<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juego de Adivinar el Número"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Subtítulo de intentos -->
    <TextView
        android:id="@+id/txtIntentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tienes 3 intentos para adivinar"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Imagen (puedes usar una imagen de perfil por defecto) -->
    <ImageView
        android:id="@+id/imgJugador"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_marginBottom="16dp" />

    <!-- Entrada del número -->
    <EditText
        android:id="@+id/editNumero"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Número a Adivinar"
        android:inputType="number"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Botón para adivinar -->
    <Button
        android:id="@+id/btnAdivinar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Adivinar"
        android:textSize="18sp"
        android:backgroundTint="#888888"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Resultado del juego -->
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center" />

</LinearLayout>
